# =============================
# Inkura API (apps/api)
# =============================

# Neon Postgres (recommended)
# - DATABASE_URL  : pooled URL (Connection pooling ON) → for runtime/serverless
# - DIRECT_URL    : direct URL  (Connection pooling OFF) → for Prisma db push/migrate/seed
DATABASE_URL="postgresql://USER:PASSWORD@HOST-pooler.REGION.aws.neon.tech/DB?sslmode=require"
DIRECT_URL="postgresql://USER:PASSWORD@HOST.REGION.aws.neon.tech/DB?sslmode=require"

# NextAuth
# Generate once (example PowerShell):
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET="replace_with_random_long_secret"

# Optional (OAuth)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# =============================
# (Optional) Cloudflare R2 placeholders (will be used in later versions)
# =============================
# R2_BUCKET=
# R2_ENDPOINT=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_PUBLIC_BASE_URL=
